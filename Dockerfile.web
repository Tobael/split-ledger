# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /build

# Copy root workspace config
COPY package.json package-lock.json ./

# Copy packages needed for the web build (core + web)
COPY packages/core/package.json packages/core/
COPY packages/web/package.json packages/web/

# Install all deps (including dev for build tooling)
RUN npm ci --workspace=packages/core --workspace=packages/web --include-workspace-root

# Copy source
COPY packages/core/ packages/core/
COPY packages/web/ packages/web/

# Build core first (web depends on it), then web
RUN npm run build --workspace=packages/core && \
    npm run build --workspace=packages/web

# Stage 2: Serve with nginx
FROM nginx:alpine AS runtime

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy our SPA-aware config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy built static assets
COPY --from=builder /build/packages/web/dist/ /usr/share/nginx/html/

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
